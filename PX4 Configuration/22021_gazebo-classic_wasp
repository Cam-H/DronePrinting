#!/bin/sh
#
# @name Typhoon H480 SITL
#
# @type Hexarotor x
#

. ${R}etc/init.d/rc.mc_defaults

param set-default MAV_TYPE 13

param set-default MC_ROLL_P 6.0
param set-default MC_ROLLRATE_P 0.06
param set-default MC_ROLLRATE_I 0.03
param set-default MC_ROLLRATE_D 0.001

param set-default MC_PITCH_P 5
param set-default MC_PITCHRATE_P 0.025
param set-default MC_PITCHRATE_I 0.012
param set-default MC_PITCHRATE_D 0.0024

param set-default MC_YAW_P 2.0
param set-default MC_YAWRATE_P 0.50
param set-default MC_YAWRATE_I 0.10
param set-default MC_YAWRATE_D 0.01

param set-default MPC_XY_VEL_I_ACC 4
param set-default MPC_XY_VEL_P_ACC 3


param set-default RTL_DESCEND_ALT 10

param set-default TRIG_INTERFACE 3
param set-default TRIG_MODE 4
param set-default MNT_MODE_IN 4
param set-default MNT_MODE_OUT 2
param set-default MAV_PROTO_VER 2

param set-default CA_AIRFRAME 0
